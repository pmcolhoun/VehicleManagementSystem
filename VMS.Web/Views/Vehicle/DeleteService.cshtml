@model Service

<h3 class="mt-4 mb-4">Delete Service</h3>

<h4 class="mb-4">Are you sure you want to delete service for this vehicle?</h4>

<div>

    <!--Display the service details -->
    <dl class="row">
         <dt class="col-sm-3">Staff</dt>
        <dd class="col-sm-9">@Model.EmployeeName</dd>
        
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.DateOfService.Year</dd>
        
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.InvoiceDescription</dd>
    </dl>


    <form asp-action="DeleteServiceConfirm" method="POST">
        <input type="hidden" name="id" value=@Model.ServiceId />
        
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>

</div>